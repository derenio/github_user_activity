doctype html
html
  head
    title GitHub users' activities
    script(src="/static/js/jquery-3.2.1.min.js")
    script(src="/static/vis/vis.js" type="text/javascript")
    link(href="/static/vis/vis.css" rel="stylesheet" type="text/css")
    script(type='text/javascript').
      $(function() {
        const data = !{data};
        const formattedData = !{formattedData};
        const authors = Array.from(new Set(formattedData.map((elem) => elem.author)));
        $('#issues').html(data.issues.length);
        $('#comments').html(data.comments.length);
        $('#commits').html(data.commits.length);
        $('#authors').html(JSON.stringify(authors));
      })
  body
    h1 Activities
    div(id="issues")
    div(id="comments")
    div(id="commits")
    div(id="authors")
